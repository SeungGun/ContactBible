<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TodayVerseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.7"
        android:background="@drawable/bottom_btn_design">

        <ImageButton
            android:id="@+id/back_menu_setting"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:background="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="7.6"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="오늘의 구절"
            android:textColor="#000000"
            android:textSize="13pt"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/language_toggle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1.1"
            android:background="#5E92C4"
            android:checked="false"
            android:elevation="10dp"
            android:textColor="#000000"
            android:textOff="영"
            android:textOn="한"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_scr"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="로딩 중입니다"
                android:textSize="13pt" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/today_scr"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9.3"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/today_title"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:textColor="#000000"
            android:textSize="12pt"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/today_list"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="9.0" />
    </LinearLayout>


</LinearLayout>