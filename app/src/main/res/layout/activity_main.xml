<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/top_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#BEDAFA"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_open"
            android:layout_width="0px"
            android:layout_weight="1.3"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/menu_icon"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/title_content"
            android:layout_width="0px"
            android:layout_weight="7.7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="14pt" />
        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/bookmark_icon"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/above_content_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Memo"
                android:textColor="#E5E9EB"
                android:background="@drawable/memo_btn_design"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="0px"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center_vertical|right"
                android:textStyle="bold"
                android:text="절 단위 바꾸기 ▶"
                />
            <SeekBar
                android:id="@+id/side_mode"
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:max="2"
                android:layout_gravity="center_vertical"
                android:progressDrawable="@drawable/seekbar_background"
                android:thumb="@drawable/seekbar_thumb"/>
        </LinearLayout>
    <ScrollView
        android:id="@+id/side1_layout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="7"
        android:fillViewport="true"
        android:visibility="visible"
        >
        <LinearLayout
            android:id="@+id/screen_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="17pt"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                android:paddingTop="20dp"/>
        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/side2_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="0px"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:id="@+id/side2_left_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/side2_left_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:textSize="15pt"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="20dp"
                        android:gravity="bottom"
                        android:paddingBottom="30dp"
                        />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="6"
                android:layout_height="0px"
                android:fillViewport="true"
               >
                <LinearLayout
                    android:id="@+id/side2_right_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/side2_right_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:textColor="#000000"
                        android:textSize="15pt"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="30dp"                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <!-- _____________2절 단위 layout End__________________ -->
        <LinearLayout
            android:id="@+id/side3_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="3.3"
                android:layout_height="0px"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/side3_left_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/side3_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="13pt"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="30dp"
                        android:paddingTop="20dp"
                        />
                </LinearLayout>
            </ScrollView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="3.4"
                android:layout_height="0px"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/side3_center_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/side3_center_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="13pt"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="30dp"
                        android:paddingTop="40dp"
                        />
                </LinearLayout>
            </ScrollView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="3.3"
                android:layout_height="0px"
                android:fillViewport="true">
                <LinearLayout
                    android:id="@+id/side3_right_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/side3_right_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="13pt"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="30dp"
                        android:paddingTop="20dp"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <!-- _____________3절 단위 layout End__________________ -->
        <LinearLayout
            android:id="@+id/memo_layout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="4"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.4"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/memo_store"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:text="저장하기"
                    android:textSize="10pt"
                    android:textColor="#000000"
                    android:background="@drawable/memo_set_btn_design"/>
                <Button
                    android:id="@+id/quit_memo"
                    android:layout_width="0px"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="창 닫기"
                    android:textColor="#000000"
                    android:textSize="10pt"
                    android:background="@drawable/memo_set_btn_design"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                tools:ignore="NestedWeights">
                <EditText
                    android:id="@+id/memo_space"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/memo_background"
                    android:gravity="top"
                    android:ems="10"
                    android:hint=" Memo"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="10pt"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.8"
            android:orientation="horizontal"
           >
            <Button
                android:id="@+id/go_mainmenu"
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="메인메뉴"
                android:textSize="8pt"
                android:textColor="#000000"
                android:background="@drawable/bottom_btn_design"
                />


            <LinearLayout
                android:id="@+id/bottom_center_menu"
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bottom_btn_design"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="3.2"
                android:text="글씨 조절하기"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="8pt"
                android:gravity="center"/>
                <SeekBar
                android:id="@+id/seekbar_textsize"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="6.8"
                android:max = "35"
                android:min="5"
                android:progressDrawable="@drawable/seekbar_background"
                android:thumb="@drawable/seekbar_thumb"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_right_menu"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/bottom_btn_design">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:text="묵상곡"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="7pt"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="7"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/play_music"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/play_icon"/>
                    <Button
                        android:id="@+id/control_volume"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="11pt"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:background="@drawable/bottom_right_menu_design"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>