<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.windry.contactbible"
    android:versionCode="8"
    android:versionName="1.1.6">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_contact_hand"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_contact_hand_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.TodayVerseActivity"/>
        <activity android:name=".activities.SettingActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainMenuActivity" />
        <activity android:name=".activities.ProgressBarActivity" />
        <activity android:name=".activities.BookMarkActivity" />
        <activity android:name=".activities.AppHelperActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>